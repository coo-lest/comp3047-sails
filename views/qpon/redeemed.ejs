<%- partial('../partials/navbar.ejs') %> 
<section class="section">
    <div class="container">
        <h1 class="title">Q-Pon</h1>
        <h2 class="subtitle">Redeem your coins for dining coupons</h2>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="subtitle"><b>My Coupons</b></div>
        <div class="columns">
            <div class="column" id="col0">
            </div>
            <div class="column" id="col1">
            </div>
            <div class="column" id="col2">
            </div>
        </div>
    </div>
</section>

<script>

    async function getData() {
        var response = await fetch("/qpon/my_coupons", { method: "GET" });

        var json = await response.json();

        var colNum = 0;

        console.log(json);

        json.forEach(function (qpon) {
            var col = document.getElementById("col" + colNum);
            colNum = (colNum + 1) % 3;

            var card = "<div class='card'> \
                        <div class='card-image'>\
                            <figure class='image is-4by3'>\
                                <a href='/qpon/detail/" + qpon.id + "'><img src='" + qpon.image + "'></a>\
                            </figure>\
                        </div>\
                        <div class='card-content'>\
                            <a href='/qpon/detail/" + qpon.id + "'><b>" + qpon.restaurant + "</b></a>\
                            <div>" + qpon.detail + "</div>\
                            <br>\
                            <div>Expiry Date: "+ qpon.expire + "</div>\
                        </div>\
                    </div>\
                    <br>";
            col.innerHTML += card;

        });
    }

    getData();

</script>